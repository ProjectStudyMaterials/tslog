{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2017", "es7", "es2019"],
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.tsx"
  ]
}
